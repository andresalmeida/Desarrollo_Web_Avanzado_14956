@model IEnumerable<TiendaMusicaApp.Models.Artista>

@{
    ViewData["Title"] = "Index";
}
<link href="~/css/site.css" rel="stylesheet">

<h1>Artistas más escuchados en nuestras playlists</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Añade a un artista que quisieras escuchar</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Nacimiento)</th>
                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nacimiento)</td>
                    <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                    <td>
                        <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Editar</a>
                        <a asp-action="Details" class="btn btn-primary btn-sm" asp-route-id="@item.Id">Detalles</a>
                        <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
